.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__ico
        =link_to new_group_path, class: "btn edit-btn" do
          %i.fa.fa-edit
        =link_to edit_user_path(current_user), class: "btn cog-btn" do
          %i.fa.fa-cog        
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-element
        = link_to group_messages_path(group)   do
          .group-element__name
            = group.name
          .group-element__message
            = group.show_last_message